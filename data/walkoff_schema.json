{
  "title": "A JSON Schema for Walkoff Apps.",
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "required": [
    "walkoff",
    "info"
  ],
  "additionalProperties": false,
  "patternProperties": {
    "^x-": {
      "$ref": "#/definitions/vendorExtension"
    }
  },
  "properties": {
    "walkoff": {
      "type": "string",
      "enum": [
        "0.1"
      ],
      "description": "The Walkoff version of this document."
    },
    "info": {
      "$ref": "#/definitions/info"
    },
    "actions": {
      "$ref": "#/definitions/actions"
    },
    "conditions": {
      "$ref": "#/definitions/conditions"
    },
    "transforms": {
      "$ref": "#/definitions/transforms"
    },
    "devices": {
      "$ref": "#/definitions/devices"
    },
    "definitions": {
      "$ref": "#/definitions/definitions"
    },
    "tags": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/tag"
      },
      "uniqueItems": true
    },
    "external_docs": {
      "$ref": "#/definitions/external_docs"
    }
  },

  "definitions": {
    "info" : { "$ref": "./walkoff_schema/def_info.json/#info" },
    "contact" : { "$ref": "./walkoff_schema/def_contact.json/#contact" },
    "license" : { "$ref": "./walkoff_schema/def_license.json/#lisence" },
    "actions" : { "$ref": "./walkoff_schema/def_actions.json/#actions" },
    "conditions" : { "$ref": "./walkoff_schema/def_conditions.json/#conditions" },
    "transforms" : { "$ref": "./walkoff_schema/def_transforms.json/#transforms" },
    "devices" : { "$ref": "./walkoff_schema/def_device.json/#devices" },
    "device" : { "$ref": "./walkoff_schema/def_device.json/#device" },
    "deviceField" : { "$ref": "./walkoff_schema/def_device.json/#deviceField" },
    "definitions" : { "$ref": "./walkoff_schema/def_definitions.json/#definitions" },
    "parameterDefinitions" : { "$ref": "./walkoff_schema/def_definitions.json/#parameterDefinitions" },
    "external_docs" : { "$ref": "./walkoff_schema/def_external.json/#external_docs" },
    "external_doc" : { "$ref": "./walkoff_schema/def_external.json/#external_doc" }
  }
}